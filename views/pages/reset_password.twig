<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Infectious | Coronavirus (COVID 19) Medical HTML Template</title>

    <link rel="shortcut icon" href="{{ helper.custom_link('assets/images/favicon.ico')}}">
    <link rel="stylesheet" href="{{ helper.custom_link('assets/css/master.css')}}">
    <link rel="stylesheet" href="{{ helper.custom_link('assets/css/responsive.css')}}">
</head>
<body>
<nav class="navbar navbar-default navbar-fixed navbar-transparent white bootsnav on no-full">
    <div class="container">
        <!--=== Start Header Navigation ===-->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu"> <i class="mdi mdi-menu"></i> </button>
            <div class="logo"> <a href="{{ helper.redirect('/') }}"> <img class="logo logo-display" src="{{ helper.custom_link('assets/images/logo-black.png')}}" alt=""> <img class="logo logo-scrolled" src="{{ helper.custom_link('assets/images/logo-black.png')}}" alt=""> </a> </div>
        </div>
        <!--=== End Header Navigation ===-->
    </div>
</nav>
<section class="vh-100">
    <div class="container py-5 h-100">
        {% if(session.getFlash('message')) %}
            <div class="alert alert-success">
                {{ session.getFlash('message') }}
            </div>
        {%  endif %}
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-7 col-lg-5 col-xl-6">
                <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-8 col-lg-7 col-xl-5 offset-xl-1">
                <form method="post" action="{{ helper.redirect('/reset') }}">
                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">ENTER PASSWORD HERE</p>
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-4" hidden>
                        <input type="email" id="form1Example13" class="form-control form-control-lg" name="email" value="{{ email }}"/>
                        <label class="form-label" for="form1Example13">Email address</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" id="old_password" class="form-control form-control-lg" name="old_password" required/>
                        <label class="form-label" for="old_password">Old Password</label>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" id="new_password" class="form-control form-control-lg" name="new_password" onmouseout="checkoldpassword()" required/>
                        <label class="form-label" for="new_password">New Password</label><br>
                        <span class="text-danger text-uppercase" id="erpass1"></span>

                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" id="password" class="form-control form-control-lg" name="password" onchange="checkpassword()" required />
                        <label class="form-label" for="password">Retype Password</label><br>
                        <span class="text-danger text-uppercase" id="erpass"></span>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">SUBMIT</button>

                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function checkoldpassword() {
        var gt1 = document.getElementById("new_password").value;
        var gt = document.getElementById("old_password").value;
        if (gt1!=gt) {
            document.getElementById("erpass1").innerHTML = "";
        }
        else {
            document.getElementById("erpass1").innerHTML = "Password không được trùng!";
        }
    }
    function checkpassword() {
        var gt2 = document.getElementById("new_password").value;
        var gt = document.getElementById("password").value;
        if (gt2==gt){
            document.getElementById("erpass").innerHTML = "";
        }
        else {
            document.getElementById("erpass").innerHTML = "Password nhập lại không đúng!";
        }
    }
</script>
</body>
</html>


